<section class="card">
    <a href="/comment/{{id}}">
        <header>{{title}}</header>
        <p>{{content}}</p>
        <p>Posted on {{date_posted}}</p>
    </a>
        <button class="btn btn-primary edit-comment-btn" data-comment-id="{{id}}">Edit comment</button>
        <button class="btn btn-primary delete-comment-btn" data-comment-id="{{id}}">Delete comment</button>
</section>
