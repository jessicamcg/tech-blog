<section class="container">
  <div class="card">
    <header>
      <h3 class="blog-name">{{blog.title}}</h3>
    </header>

    <section class="flex-column align-center">
      <p>{{blog.content}}</p>
      
      <p>Posted on {{blog.date_posted}} by {{blog.user.username}}</p>
    </section>
    <button class="btn btn-primary add-comment-btn">Add a comment</button>
    {{#if canEdit}}
    <button class="btn btn-primary edit-blog-btn" data-id="{{blog.id}}">Edit blog post</button>
    <button class="btn btn-primary delete-blog-btn" data-id="{{blog.id}}">Delete blog</button>
    {{/if}}
  </div>


  <h3>Comments</h3>{{canEdit}}
  {{#each comments as |comment|}}
  {{!-- {{> comment-details test=canEdit}} --}}
  {{!-- {{>comment-details}} --}}
  <section class="card">
    <header>{{title}}</header>
    <p>{{content}}</p>
    <p>Posted on {{date_posted}}</p>

    {{!-- {{canEdit}}
    {{test}}
    {{session.canEdit}}
    {{canEdit}}
    {{loggedIn}} --}}
    {{#if true}}
        <button class="btn btn-primary edit-comment-btn" data-comment-id="{{id}}">Edit comment</button>
        <button class="btn btn-primary delete-comment-btn" data-comment-id="{{id}}">Delete comment</button>
    {{else}}
      testing
    {{/if}}
</section>

  {{/each}}



</section>


<script src="/js/blog.js"></script>

<script src="/js/comment.js"></script>