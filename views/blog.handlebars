<section class="container">
  <div class="card">
    <header>
      <h3 class="blog-name">{{blog.title}}</h3>
    </header>

    <section class="flex-row justify-center">
      <p>{{blog.content}}</p>
      <p>Posted by</p>
    </section>

    <button class="btn btn-primary add-comment-btn">Add a comment</button>
    <button class="btn btn-primary edit-blog-btn">Edit blog post</button>
    <button class="btn btn-primary delete-blog-btn">Delete blog</button>
  </div>


  <h3>Comments</h3>
  {{#each comments as |comment|}}
  {{> comment-details}}
  {{/each}}



</section>

<script src="/js/addCommentBtn.js"></script>