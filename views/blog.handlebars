<section class="container">
  <div class="card">
    <header>
      <h3 class="blog-name">{{blog.title}}</h3>
    </header>
    
    <section class="flex-row justify-center">
      <p>{{blog.content}}</p>

    </section>
  </div>

  <div class="card">
      {{#each comment as |comments|}}
      {{> comment-details}}
      {{/each}}
  </div>
</section>